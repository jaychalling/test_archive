{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "redirects": [
        {
            "source": "/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "2026puritytest.com"
                }
            ],
            "destination": "https://www.test-archive.com/test/rice-purity",
            "permanent": true
        },
        {
            "source": "/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "www.2026puritytest.com"
                }
            ],
            "destination": "https://www.test-archive.com/test/rice-purity",
            "permanent": true
        }
    ],
    "routes": [
        {
            "src": "/api/(?!og)(.*)",
            "dest": "/backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}